# ===========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
#
# ðŸ“š CARA MENGGUNAKAN:
# 1. Copy file ini menjadi .env (untuk development)
# 2. Copy file ini menjadi .env.staging (untuk staging)
# 3. Copy file ini menjadi .env.production (untuk production)
# 4. Isi dengan nilai yang sesuai untuk setiap environment
# 5. JANGAN commit file .env yang berisi credentials asli!
#
# ðŸš¨ FILE INI AMAN DIREVISION CONTROL
# File ini hanya berisi template tanpa credentials asli

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=development
IS_DEBUG=true
ENABLE_LOGGING=true
ENABLE_API_LOGGING=true

# ===========================================
# API CONFIGURATION
# ===========================================
# Development: https://dummyjson.com
# Staging: https://staging-api.yourdomain.com
# Production: https://api.yourdomain.com
API_BASE_URL=https://dummyjson.com
API_VERSION=v1

# Network Configuration
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
CONNECTION_TIMEOUT_SECONDS=10

# ===========================================
# AUTHENTICATION CREDENTIALS
# ===========================================
# ðŸš¨ REPLACE dengan credentials yang sesuai
# Development: Gunakan DummyJSON credentials
# Staging/Production: Gunakan secure authentication system

# Primary Demo Credentials
DEMO_USERNAME=your_username_here
DEMO_PASSWORD=your_password_here

# Secondary Demo Credentials
DEMO_USERNAME_2=secondary_username_here
DEMO_PASSWORD_2=secondary_password_here

# Fallback Credentials
DEMO_USERNAME_3=fallback_username
DEMO_PASSWORD_3=fallback_password

# ===========================================
# FEATURE FLAGS
# ===========================================
# Control feature availability per environment
ENABLE_WISHLIST=true
ENABLE_CART=true
ENABLE_USER_PROFILE=true
ENABLE_PRODUCT_REVIEWS=false

# ===========================================
# UI CONFIGURATION
# ===========================================
ENABLE_ANIMATIONS=true
ANIMATION_DURATION_MS=300
GRID_LOADING_PLACEHOLDERS=true

# ===========================================
# SECURITY SETTINGS
# ===========================================
SESSION_TIMEOUT_MINUTES=60
ENABLE_TOKEN_REFRESH=true
REQUIRE_BIOMETRIC=false

# ===========================================
# CACHE SETTINGS
# ===========================================
ENABLE_PRODUCT_CACHE=true
PRODUCT_CACHE_DURATION_MINUTES=30
ENABLE_IMAGE_CACHE=true